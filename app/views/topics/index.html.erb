<p id="notice"><%= notice %></p>

<h1>投稿一覧</h1>

<div class="row">
  <% @topics.each do |topic| %>
    <div class="col-4 mt-2">
      <div class="card">
        <div class="card-body">
          <div class="card-title">
            <h4 class="card-title-text">
              <%= topic.title %>
            </h4>
          </div>
          <div class="card-content">
            <div class="d-flex justify-content-start m-3">
              <%= truncate(strip_tags(topic.content.to_s), length: 50) %>
            </div>
            <div class="">
              <%= link_to "投稿を見る", topic_path(topic), class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= paginate @topics %>

<br>

<%= link_to 'New Topic', new_topic_path %>
